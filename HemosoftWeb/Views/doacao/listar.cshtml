@model List<Doacao>
@{
    ViewData["Title"] = "Listar Doações";
}


<h2>Listar Doações</h2>
<hr />

<div class="row">
    <div class="col-md-6 mx-auto">
        <table style="margin-bottom:15px;margin-top:15px"
               class="table table-hover table-striped">
            <thead>
                <tr class="table-active">
                    <th scope="col"># Doação</th>
                    <th scope="col">Data</th>
                    <th scope="col">Status</th>
                    <th scope="col">Tipo Sanguineo</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Doacao item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.IdDoacao</td>
                        <td class="align-middle">@item.DataDoacao</td>
                        <td class="align-middle">@item.StatusDoacao </td>
                        <td class="align-middle">@item.Doador.TipoSanguineo @item.Doador.FatorRh</td>
                        <td class="align-middle">
                            <a class="btn btn-primary" asp-action="perfil" asp-route-id="@item.IdDoacao">Visualizar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>