@model List<Solicitacao>
@{
    ViewData["Title"] = "Listar Solicitações";
}

<h2>Listar Solicitações</h2>
<hr />

<div class="row">
    <div class="col-md-6 mx-auto">
        <table class="table my-4 table-sm ">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"># Solicitacao</th>
                    <th scope="col">Data</th>
                    <th scope="col">Solicitante</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Solicitacao item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.IdSolicitacao</td>
                        <td class="align-middle">@item.DataSolicitacao</td>
                        <td class="align-middle">@item.Solicitante.RazaoSocial</td>
                        <td class="align-middle">
                            <a class="btn btn-primary" asp-controller="doacao" asp-action="perfil" asp-route-id="@item.Doacoes[0].IdDoacao">Visualizar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>