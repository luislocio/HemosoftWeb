@model List<Triador>
@{
    ViewData["Title"] = "Listar Triadores";
}


<h2>Listar Triadores</h2>
<hr />

<div class="row">
    <div class="col-md-6 mx-auto">
        <table style="margin-bottom:15px;margin-top:15px"
               class="table table-hover table-striped">
            <thead>
                <tr class="table-active">
                    <th scope="col">Matricula</th>
                    <th scope="col">Nome Completo</th>
                    <th scope="col">Status</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Triador item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Matricula</td>
                        <td class="align-middle">@item.NomeCompleto</td>
                        <td class="align-middle">@item.StatusUsuario </td>
                        <td class="align-middle">
                            <a class="btn btn-primary" asp-action="perfil" asp-route-id="@item.IdTriador">Visualizar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>